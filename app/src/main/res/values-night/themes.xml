<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Truffle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="coreUiBrandInteractive">@color/design_core_ui_brand_interactive</item>

        <item name="coreUiBrandVibrantPurple">@color/design_core_ui_brand_vibrant_purple</item>
        <item name="coreUiBrandVibrantBlue">@color/design_core_ui_brand_vibrant_blue</item>
        <item name="coreUiBrandVibrantGreen">@color/design_core_ui_brand_vibrant_green</item>
        <item name="coreUiBrandVibrantYellow">@color/design_core_ui_brand_vibrant_yellow</item>
        <item name="coreUiBrandVibrantOrange">@color/design_core_ui_brand_vibrant_orange</item>
        <item name="coreUiBrandVibrantRed">@color/design_core_ui_brand_vibrant_red</item>
        <item name="coreUiBrandVibrantGray">@color/design_core_ui_brand_vibrant_gray</item>

        <item name="coreUiBrandPastelPurple">@color/design_core_ui_brand_pastel_purple</item>
        <item name="coreUiBrandPastelBlue">@color/design_core_ui_brand_pastel_blue</item>
        <item name="coreUiBrandPastelGreen">@color/design_core_ui_brand_pastel_green</item>
        <item name="coreUiBrandPastelYellow">@color/design_core_ui_brand_pastel_yellow</item>
        <item name="coreUiBrandPastelOrange">@color/design_core_ui_brand_pastel_orange</item>
        <item name="coreUiBrandPastelRed">@color/design_core_ui_brand_pastel_red</item>
        <item name="coreUiBrandPastelGray">@color/design_core_ui_brand_pastel_gray</item>
        <item name="coreUiBrandPastelIndigo">@color/design_core_ui_brand_pastel_indigo</item>
        <item name="coreUiBrandPastelPink">@color/design_core_ui_brand_pastel_pink</item>

        <item name="coreUiTextPrimary">@color/text_primary</item>
        <item name="coreUiTextSecondary">@color/text_secondary</item>
        <item name="coreUiTextTertiary">@color/text_tertiary</item>
        <item name="coreUiTextPlaceholder">@color/text_placeholder</item>
        <item name="coreUiTextPositive">@color/text_positive</item>
        <item name="coreUiTextNegative">@color/text_negative</item>
        <item name="coreUiTextInteractive">@color/text_interactive</item>
        <item name="coreUiTextInteractiveLegal">@color/text_interactive_legal</item>
        <item name="coreUiTextPrimaryInverse">@color/text_primary_inverse</item>

        <item name="coreUiIconPrimary">@color/icon_primary</item>
        <item name="coreUiIconSecondary">@color/icon_secondary</item>
        <item name="coreUiIconTertiary">@color/icon_tertiary</item>
        <item name="coreUiIconPositive">@color/design_core_ui_icon_positive</item>
        <item name="coreUiIconNegative">@color/design_core_ui_icon_negative</item>
        <item name="coreUiIconInteractive">@color/design_core_ui_icon_interactive</item>
        <item name="coreUiIconPrimaryInverse">@color/design_core_ui_icon_primary_inverse</item>

        <item name="coreUiBackgroundPrimary">@color/design_core_ui_background_primary</item>
        <item name="coreUiBackgroundSecondary">@color/design_core_ui_background_secondary</item>
        <item name="coreUiBackgroundScrim">@color/design_core_ui_background_scrim</item>

        <item name="coreUiSurfacePrimary">@color/design_core_ui_surface_primary</item>
        <item name="coreUiSurfaceSecondary">@color/design_core_ui_surface_secondary</item>
        <item name="coreUiSurfaceTertiary">@color/design_core_ui_surface_tertiary</item>
        <item name="coreUiSurfacePositive">@color/design_core_ui_surface_positive</item>
        <item name="coreUiSurfaceNegative">@color/design_core_ui_surface_negative</item>
        <item name="coreUiSurfaceInteractive">?coreUiBrandInteractive</item>
        <item name="coreUiSurfacePrimaryInverse">@color/design_core_ui_surface_primary_inverse</item>

        <item name="coreUiStrokePrimary">@color/design_core_ui_stroke_primary</item>
        <item name="coreUiStrokeSecondary">@color/design_core_ui_stroke_secondary</item>
        <item name="coreUiStrokeTertiary">@color/design_core_ui_stroke_tertiary</item>
        <item name="coreUiStrokeNegative">@color/design_core_ui_stroke_negative</item>
        <item name="coreUiStrokeInteractive">?coreUiBrandInteractive</item>
        <item name="coreUiStrokePrimaryInverse">@color/design_core_ui_stroke_primary_inverse</item>

        <item name="coreUiPressedLow">@color/design_core_ui_pressed_low</item>
        <item name="coreUiPressedMedium">@color/design_core_ui_pressed_medium</item>
        <item name="coreUiPressedHigh">@color/design_core_ui_pressed_high</item>

        <item name="colorPrimary">?coreUiBrandInteractive</item>
        <item name="colorPrimaryDark">?coreUiBrandInteractive</item>
        <item name="colorAccent">?coreUiBrandInteractive</item>
        <item name="colorControlActivated">?colorAccent</item>
        <item name="colorControlHighlight">?coreUiPressedLow</item>
        <item name="colorControlNormal">?coreUiIconPrimary</item>
        <item name="colorError">?coreUiIconNegative</item>
        <item name="colorSurface">?coreUiSurfacePrimary</item>
        <item name="elevationOverlayColor">@color/design_core_ui_blue90</item>

        <item name="android:textColorPrimary">?coreUiTextPrimary</item>
        <item name="android:textColorPrimaryDisableOnly">?coreUiTextPrimary</item>
        <item name="android:textColorPrimaryNoDisable">@color/design_core_ui_gray100</item>
        <item name="android:textColorPrimaryInverse">?coreUiTextPrimaryInverse</item>
        <item name="android:textColorPrimaryInverseDisableOnly">?android:textColorPrimaryInverse</item>
        <item name="android:textColorPrimaryInverseNoDisable">@color/design_core_ui_gray0</item>
        <item name="android:textColorSecondary">?coreUiTextSecondary</item>
        <item name="android:textColorSecondaryNoDisable">@color/design_core_ui_gray100_alpha70</item>
        <item name="android:textColorHint">?coreUiTextPlaceholder</item>
        <item name="android:textColorLink">?coreUiTextInteractive</item>

        <item name="android:windowBackground">?coreUiBackgroundPrimary</item>
        <item name="android:colorBackground">?coreUiBackgroundPrimary</item>
        <item name="scrimBackground">?coreUiBackgroundScrim</item>
        <item name="android:colorEdgeEffect">?coreUiPressedLow</item>
        <item name="android:disabledAlpha">0.38</item>

        <!-- Text appearance -->
        <item name="android:textAppearance">@style/CoreUiTextAppearance</item>
        <item name="android:textAppearanceSmall">@style/CoreUiTextAppearance.BodyF3</item>
        <item name="android:textAppearanceMedium">@style/CoreUiTextAppearance.BodyF2</item>
        <item name="android:textAppearanceLarge">@style/CoreUiTextAppearance.BodyF1</item>
        <item name="android:textAppearanceButton">@style/CoreUiTextAppearance.BodyF3</item>
        <item name="android:actionMenuTextAppearance">@style/CoreUiTextAppearance.SubtitleF2</item>
        <item name="android:textAppearanceLargePopupMenu">@style/CoreUiTextAppearance.BodyF2</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/CoreUiTextAppearance.BodyF2</item>
        <item name="android:textAppearanceListItem">@style/CoreUiTextAppearance.BodyF2</item>
        <item name="android:textAppearanceListItemSmall">@style/CoreUiTextAppearance.BodyF2</item>

    </style>
</resources>