<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="CustomAutoSizeTextSize,ProjectPrivateResource">

    <style name="CoreUiButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">@dimen/design_core_ui_components_button_text_auto_size_granularity</item>
        <item name="android:paddingStart">@dimen/design_core_ui_spacing_two</item>
        <item name="android:paddingEnd">@dimen/design_core_ui_spacing_two</item>
        <item name="android:paddingTop">@dimen/design_core_ui_spacing_half</item>
        <item name="android:paddingBottom">@dimen/design_core_ui_spacing_half</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">@dimen/design_core_ui_spacing_one</item>
        <item name="iconGravityValue">textStart</item>
        <item name="strokeWidth">@dimen/design_core_ui_components_button_stroke</item>
    </style>

    <style name="CoreUiButton.Focus">
