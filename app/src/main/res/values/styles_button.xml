        <item name="autoSizeMaxTextSize">17sp</item>
        <item name="android:textAppearance">@style/CoreUiTextAppearance.TitleF2</item>
        <item name="progressIndicatorSize">@dimen/design_core_ui_grid24</item>
        <item name="cornerRadius">@dimen/design_core_ui_components_button_focus_compact_corner_radius</item>
    </style>

    <style name="CoreUiButton.Drive">
